{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2024",
    "lib": ["DOM", "ES2024"]
  }
}
